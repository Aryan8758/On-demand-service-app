<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_gradient">

    <!-- Total Customers Box -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_customers"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:backgroundTint="#6200EE">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_total_customers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Customers"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/value_total_customers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="26sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Total Providers Box -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_providers"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/card_customers"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:backgroundTint="#03DAC5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_total_providers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Providers"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/value_total_providers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="26sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Pending Requests Box -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_pending"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/card_providers"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:backgroundTint="#FFA000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_pending_requests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending Requests"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/value_pending_requests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="26sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Approved Providers Box -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_approved"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@id/card_pending"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        android:backgroundTint="#4CAF50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_approved_providers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approved Providers"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/value_approved_providers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="40"
                android:textSize="26sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Floating Logout Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_logout"
        app:backgroundTint="@color/white"
        app:fabSize="normal"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />


</RelativeLayout>
